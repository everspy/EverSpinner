<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/new_syn_word_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/new_syn_word_input"
        app:layout_constraintTop_toTopOf="@id/new_syn_word_input"
        app:layout_constraintBottom_toBottomOf="@id/new_syn_word_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/new_syn_word_input_label"/>
    <EditText
        android:id="@+id/new_syn_word_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/new_syn_word_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/new_syn_score_label"
        app:layout_constraintLeft_toLeftOf="@id/new_syn_word_label"
        app:layout_constraintTop_toTopOf="@id/new_syn_score_input"
        app:layout_constraintBottom_toBottomOf="@id/new_syn_score_input"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_input_label"/>
    <EditText
        android:id="@+id/new_syn_score_input"
        app:layout_constraintTop_toBottomOf="@id/new_syn_word_input"
        app:layout_constraintLeft_toLeftOf="@id/new_syn_word_input"
        app:layout_constraintRight_toRightOf="@id/new_syn_word_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLength="9"
        android:inputType="number"/>

</androidx.constraintlayout.widget.ConstraintLayout>